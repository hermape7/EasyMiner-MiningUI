showHistogram()
	background transparent url('../images/sprite-icons.png') -20px -664px no-repeat
	//display block
	width 16px
	height 20px
	visibility hidden

loading()
	background transparent url('../images/sprite-icons.png') -18px -416px no-repeat
	display block
	width 16px
	height 20px

tip()
	border-radius(5px)
	box-shadow(0, 0, 5px, 0, boxShadowColor)
	background-color #FFF
	height 22px
	padding 7px 5px 0 10px

border-radius(n)
	border-radius n
	-webkit-border-radius n
	-moz-border-radius n

box-shadow(h, v, blur, spread, color)
	box-shadow v h blur spread color
	-webkit-box-shadow v h blur spread color
	-moz-box-shadow v h blur spread color

userSelect(value)
	user-select: value
	-webkit-touch-callout: value
	-webkit-user-select: value
	-khtml-user-select: value
	-moz-user-select: value
	-ms-user-select: value

info()
	background transparent url('../images/sprite-icons.png') -20px -714px no-repeat
	display block
	float right
	position relative
	top -2px
	width 24px
	height 24px

tooltip()
	color #000000
	text-decoration none
	outline none
	cursor help
	position relative
	> span
		font-size 0.9em
		line-height 1.25em
		margin-left -999em
		padding: 0.5em 0.8em 0.8em 2em
		position absolute
	&:hover
		> span
			font-family fontFamily
			width 250px
			margin-left 0
			position absolute
			top 0
			left 0
			z-index 99
		span.helpImg
		span.warningImg
			display block
			width 48px
			height 48px
			left -20px
			top -20px
			position absolute
			margin 0
			padding 0
			z-index 100
		span.helpImg
			background url('../images/icon-help-48.png') top left no-repeat transparent
		span.warningImg
			background url('../images/icon-warning-48.png') top left no-repeat transparent
		em
			display block
			position relative
			top 0
			left 0
			width 250px
			font-size 1.2em
			font-weight bold
			font-style normal
			padding-top boxMargin
			padding-bottom boxMargin
	
	> .help
		background-color #D3E6F4
		border 1px solid #2BB0D7
	
	> .warning
		background-color #FFFFAA
		border 1px solid #FFAD33

disabledLink()
	cursor not-allowed
	opacity 0.5
	color unimportantTextColor
	&:hover
		text-decoration none
		color unimportantTextColor
