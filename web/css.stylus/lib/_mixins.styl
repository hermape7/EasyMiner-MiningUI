centerContent()
	margin-left auto
	margin-right auto
	position relative

centerMainContent()
	width minContentWidth2
	margin 0 auto
	position relative

box()
	color color
	background-color #FFF
	border none
	box-shadow(0, 0, 10px, 0, boxShadowColor)
	padding 20px

overlay()
	background-color #FFF
	box-shadow(5px, 5px, 5px, 0, overlayShadowColor)
	min-width 435px
	/*margin 10% auto*/
	position: fixed
	left: 50%
	top: 50%
	transform: translate(-50%, -50%)
	padding 35px 25px

overlay-close()
	color #126499
	background transparent url('../images/sprite-icons.png') -67px -116px no-repeat /*TODO pÅ™esun ikony doprava*/
	float right
	position relative
	top -20px
	right -10px
	width 18px
	height 18px
	&:hover
		text-decoration underline

h2()
	color h2Color
	font-family h2FontFamily
	font-size h2FontSize
	font-weight h2FontWeight
	margin 0 0 20px 0

h2Small()
	h2()
	font-size 0.8 * h2FontSize

h2AR()
	color h2ARColor
	font h2ARFont
	font-weight normal
	border-bottom none

button()
	background buttonBackground
	font-size buttonFontSize
	font-family buttonFontFamily
	font-weight buttonFontWeight
	text-decoration none
	cursor pointer
	color buttonColor
	border buttonBorder
	text-align center
	display inline-block
	padding 8px 13px
	&:hover
	&:focus
		background buttonHoverBackground
		color buttonHoverColor
		border buttonHoverBorder
		text-decoration none

bigButton()
	button()
	padding 12px 15px
	text-align left
	display block
	margin 5px auto
	span.details
		margin-top 1px
		display block
		font-size buttonDetailsFontSize
		font-weight buttonDetailsFontWeight
		color buttonDetailsColor
		position relative
		span.right
			display block
			float right
			visibility hidden
	&:hover
		span.details span.right
			visibility visible

mainButton()
	button()
	background mainButtonBackground
	color mainButtonColor
	border mainButtonBorder
	text-align center
	display block
	margin 15px auto
	font-size 1.3 * buttonFontSize
	min-width 150px
	&:hover
	&:focus
		background mainButtonHoverBackground
		color mainButtonHoverColor
		border mainButtonHoverBorder

invisButton()
	button()
	background invisButtonBackground
	color invisButtonColor
	border invisButtonBorder
	text-align center
	&:hover
	&:focus
		background invisButtonHoverBackground
		color invisButtonHoverColor
		border invisButtonHoverBorder

iconLink()
	//display inline-block
	display flex
	//position relative
	//top 5px
	width 20px
	height 20px
	//margin-right 5px
	+pc()
		cursor pointer

associationRule()
	float left
	height 38px
	.id
		font-size 0.8em
		text-align right
		display block
		width 35px
		margin-right 3px
		margin-top 9px
		float left
	.cedent
		cedent()
	> .cedent
		firstCedent()
	.quantifier
		float left
		margin-top 5px

cedent()
	float left
	border 1px dashed #FFF
	/*border-radius(10px)*/
	background-color #FFF
	padding 2px
	&.empty
		border 1px dashed #000
		color gray
	a.group-fields
		background transparent url('../images/sprite-icons.png') -168px -215px no-repeat
		padding-left 17px
		float right
	.fields
		fields()
	.group-fields
		font-size 14px
		position relative
		top 23px

fields()
	.field
		field()
	.field:hover
		a.remove-field
			visibility visible
		a.edit-coefficient
			visibility visible
		a.mark-field
			visibility visible
		a.change-sign.positive
			visibility visible
	.connective
		connective()
	.left-bracket,
	.right-bracket
		bracket()

field()
	float left
	height 40px
	margin 0 2px
	.coefficient
		coefficient()
	.field-drag
		cursor move
	.field-name
		display block
		float left
		max-width 250px
		overflow hidden
		text-overflow ellipsis
	.change-sign.negative,
	.field-sign.negative
		background transparent url('../images/sprite-icons.png') -118px -161px no-repeat
		width 13px
		height 20px
		float left
	.controls
		fieldControls()

fieldControls()
	a.edit-coefficient
		edit()
		+m_tablet()
			visibility visible
			margin 4px
	a.remove-field
		remove()
		+m_tablet()
			margin 4px
			visibility visible
	a.mark-field
		background transparent url('../images/sprite-icons.png') -67px -212px no-repeat
		width 16px
		height 20px
		visibility hidden
		+m_tablet()
			visibility visible
			margin 4px
	a.marked-field
		background transparent url('../images/sprite-icons.png') -68px -260px no-repeat
		width 16px
		height 20px
		visibility visible
		+m_tablet()
			visibility visible
			margin 4px
	a.change-sign.positive
	a.change-sign.negative
		background transparent url('../images/sprite-icons.png') -116px -164px no-repeat
		width 16px
		height 20px
		visibility hidden
		+m_tablet()
			visibility visible
			margin 4px

firstCedent()
	> .fields
		> .field, > .connective
			margin-top 3px

coefficient()
	color #925213
	font-size 0.85em
	position relative
	top -1px
	margin-left 3px

connective()
	color #336600
	font-size 14px

