bracket()
	font-size 18px
	float left
	position relative
	top -2px

interestMeasureMixin()
	.name
		font-size 0.9em
		margin-right 0.4rem
	.threshold, .alpha
		color interestMeasureValueColor

ruleIMs()
	font-size 0.8 * baseFontSize
	color interestMeasureColor
	*
		-moz-user-select text
		-ms-user-select text
		-webkit-user-select text
	> span
		border-right 1px solid backgroundColor
		padding-right 5px
		margin-right 5px
		&:last-child
			border-right none
		
		.value
			color interestMeasureValueColor

ruleActions()
	display inline-block
	overflow auto
	position relative
	width 100px
	height 20px
	margin-left 15px
	background transparent
	> a
		ruleActionsLink()
		display block
		width 20px
		height 20px
		float left
		margin-right 5px
		visibility hidden

showAdd()
	background transparent url("../images/sprite-icons.png") -166px -162px no-repeat
	//display block
	//float left
	width 20px
	height 20px
	visibility hidden

edit()
	background transparent url('../images/sprite-icons.png') -19px -262px no-repeat
	//display block
	width 16px
	height 20px
	visibility hidden

remove()
	background transparent url('../images/sprite-icons.png') -18px -16px no-repeat
	//display block
